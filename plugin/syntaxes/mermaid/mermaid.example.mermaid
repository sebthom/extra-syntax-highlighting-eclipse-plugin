%% Flowchart
graph TD;
    A[Start] --> B{Is it sunny?};
    B -->|Yes| C[Go outside];
    B -->|No| D[Stay inside];
    C --> E{Do you have work?};
    D --> F[Watch TV];
    E -->|Yes| G[Work from home];
    E -->|No| H[Relax in the park];

%% Sequence Diagram
sequenceDiagram;
    participant Alice;
    participant Bob;
    Alice->>Bob: Hello Bob, how are you?;
    Bob->>Alice: Fine, and you?;
    Alice->>Bob: Great!;

%% Class Diagram
classDiagram;
    class Bird {
        +String color
        +int age
        fly()
        chirp()
    }
    class Duck {
        +swim()
    }
    Bird <|-- Duck;

%% Gantt Chart
gantt;
    title A Gantt Diagram
    dateFormat  YYYY-MM-DD
    section Section
    A task           :a1, 2024-01-01, 30d
    Another task     :after a1  , 20d

%% Pie Chart
pie;
    title Pets owned in percentages
    "Dogs" : 386
    "Cats" : 85
    "Rats" : 15

%% State Diagram
stateDiagram-v2;
    [*] --> Still
    Still --> [*]
    Still --> Moving
    Moving --> Still
    Moving --> Crash
    Crash --> [*]

%% Entity Relationship Diagram
erDiagram;
    CUSTOMER ||--o{ ORDER : places
    ORDER ||--|{ LINE_ITEM : contains
    CUSTOMER {
        string name
        string id
    }
    ORDER {
        string orderNumber
        string date
    }
    LINE_ITEM {
        int quantity
        float price
    }

